{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/draw$", "dest": "/public/draw.html" },
    { "src": "^/codex$", "dest": "/public/codex.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
